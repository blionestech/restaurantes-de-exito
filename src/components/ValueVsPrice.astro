---
import { valueVsPrice } from "../data/content";
---

<section class="relative overflow-hidden py-20 sm:py-28" id="precio">
    <!-- Dark dramatic background -->
    <div
        class="absolute inset-0 bg-gradient-to-b from-brand-900 via-brand-950 to-brand-900"
    >
    </div>
    <!-- Decorative glow -->
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full blur-3xl opacity-20"
        style="background: radial-gradient(circle, #f35d09, transparent 70%);"
    >
    </div>

    <div class="relative z-10 container-narrow px-6">
        <!-- Section header -->
        <div class="text-center mb-12">
            <div
                class="inline-flex items-center gap-2 px-4 py-1.5 mb-6 rounded-full border shadow-sm backdrop-blur-sm"
                style="background: rgba(255, 255, 255, 0.05); border-color: rgba(243, 93, 9, 0.3);"
            >
                <span class="text-lg">üí∞</span>
                <span
                    class="text-xs sm:text-sm font-bold tracking-wider uppercase text-white"
                >
                    Oferta Especial
                </span>
            </div>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold font-heading text-white mb-4 animate-fade-in-up"
            >
                {valueVsPrice.title}
            </h2>
            <div
                class="w-20 h-1 mx-auto rounded-full"
                style="background: linear-gradient(90deg, #f35d09, #f30606);"
            >
            </div>
        </div>

        <div class="max-w-5xl mx-auto">
            <div
                class="rounded-3xl overflow-hidden animate-fade-in-up animate-delay-100 border border-white/10"
                style="background: rgba(255,255,255,0.05); backdrop-filter: blur(20px);"
            >
                <div class="flex flex-col md:flex-row">
                    {/* Image side */}
                    <div class="md:w-80 lg:w-96 shrink-0 relative">
                        <div class="h-72 md:h-full w-full overflow-hidden">
                            <img
                                src="/images/branding-package.png"
                                alt="Tu paquete de inversi√≥n"
                                class="w-full h-full object-cover opacity-80"
                            />
                            <!-- Overlay gradient -->
                            <div
                                class="absolute inset-0 bg-gradient-to-r from-transparent to-brand-950/80 hidden md:block"
                            >
                            </div>
                            <div
                                class="absolute inset-0 bg-gradient-to-b from-transparent to-brand-950/80 md:hidden"
                            >
                            </div>
                        </div>
                    </div>

                    {/* Pricing content */}
                    <div
                        class="flex-1 p-8 sm:p-12 text-center flex flex-col justify-center"
                    >
                        <!-- Total value -->
                        <p class="text-white/60 text-lg mb-2 font-medium">
                            Valor total de todos los servicios
                        </p>
                        <p
                            class="text-5xl sm:text-6xl font-black text-white/20 line-through mb-8"
                        >
                            {valueVsPrice.totalValue}
                        </p>

                        <!-- Arrow down -->
                        <div class="text-3xl mb-6 animate-bounce">‚¨áÔ∏è</div>

                        <!-- Final price -->
                        <p class="text-white/60 text-lg mb-3 font-medium">
                            Tu inversi√≥n hoy
                        </p>
                        <p
                            class="text-6xl sm:text-8xl font-black mb-6"
                            style="background: linear-gradient(135deg, #f35d09, #f30606); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;"
                        >
                            {valueVsPrice.finalPrice}
                        </p>

                        <!-- Savings badge -->
                        <div
                            class="inline-flex items-center justify-center gap-2 px-6 py-3 mb-10 rounded-full"
                            style="background: rgba(46, 204, 113, 0.15); border: 1px solid rgba(46, 204, 113, 0.3);"
                        >
                            <span class="text-xl">üéâ</span>
                            <span class="text-green-400 font-bold text-lg">
                                Ahorras {valueVsPrice.savings}
                            </span>
                        </div>

                        <!-- CTA -->
                        <a
                            href={valueVsPrice.ctaHref}
                            class="inline-flex items-center justify-center gap-3 px-10 py-5 text-xl font-bold text-white rounded-full transition-all duration-300 transform hover:-translate-y-1 hover:scale-105"
                            style="background: linear-gradient(135deg, #f35d09, #f30606); box-shadow: 0 8px 30px rgba(243, 93, 9, 0.5); animation: pulse-glow 2s ease-in-out infinite;"
                            data-track="value_vs_price_cta_click"
                        >
                            {valueVsPrice.cta}
                            <span class="text-2xl">‚Üí</span>
                        </a>

                        <p class="text-white/40 text-sm mt-4">
                            Sin compromisos ‚Ä¢ Respuesta en 24h
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
