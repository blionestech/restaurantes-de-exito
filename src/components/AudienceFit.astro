---
import { audienceFit } from "../data/content";
---

<section class="section-padding relative">
    <div class="container-narrow">
        <div class="text-center mb-16">
            <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
                ¿Calificas para este sistema?
            </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <!-- Qualified Column -->
            <div
                class="glass-card overflow-hidden border-t-4 border-t-accent-green"
            >
                <div
                    class="bg-brand-900/50 p-6 flex items-center gap-4 border-b border-white/5"
                >
                    <div
                        class="w-12 h-12 rounded-full bg-accent-green/20 flex items-center justify-center text-accent-green text-2xl font-bold border border-accent-green/30"
                    >
                        ✓
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-white">
                            Nuestras condiciones
                        </h3>
                        <p class="text-sm text-accent-green font-medium">
                            Luz Verde
                        </p>
                    </div>
                </div>
                <div class="p-8">
                    <ul class="space-y-4">
                        {
                            audienceFit.forYou.items.map((item) => (
                                <li class="flex items-start gap-3">
                                    <span class="text-accent-green mt-1 text-lg">
                                        ✓
                                    </span>
                                    <span class="text-brand-300 text-sm leading-relaxed">
                                        {item}
                                    </span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>

            <!-- Not Qualified Column -->
            <div
                class="glass-card overflow-hidden border-t-4 border-t-accent-red"
            >
                <div
                    class="bg-brand-900/50 p-6 flex items-center gap-4 border-b border-white/5"
                >
                    <div
                        class="w-12 h-12 rounded-full bg-accent-red/20 flex items-center justify-center text-accent-red text-2xl font-bold border border-accent-red/30"
                    >
                        ✕
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-white">
                            No apliques si...
                        </h3>
                        <p class="text-sm text-accent-red font-medium">
                            Luz Roja
                        </p>
                    </div>
                </div>
                <div class="p-8">
                    <ul class="space-y-4">
                        {
                            audienceFit.notForYou.items.map((item) => (
                                <li class="flex items-start gap-3">
                                    <span class="text-accent-red mt-1 text-lg">
                                        ✕
                                    </span>
                                    <span class="text-brand-300 text-sm leading-relaxed">
                                        {item}
                                    </span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
