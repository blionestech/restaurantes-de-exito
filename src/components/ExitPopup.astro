---
import { exitPopup } from "../data/content";
---

<!-- Exit Intent Popup (Alpine.js) -->
<div
    x-data="{
    show: false,
    dismissed: false,
    init() {
      document.addEventListener('mouseout', (e) => {
        if (e.clientY <= 0 && !this.dismissed && !this.show) {
          this.show = true;
        }
      });
      // Also show after 45 seconds as fallback for mobile
      setTimeout(() => {
        if (!this.dismissed && !this.show) {
          this.show = true;
        }
      }, 45000);
    }
  }"
    x-show="show"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    x-cloak
    class="fixed inset-0 z-[100] flex items-center justify-center p-4"
    style="display: none;"
>
    <!-- Backdrop -->
    <div
        class="absolute inset-0 bg-brand-900/60 backdrop-blur-sm"
        @click="show = false; dismissed = true;"
    >
    </div>

    <!-- Modal -->
    <div
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-95 translate-y-4"
        x-transition:enter-end="opacity-100 scale-100 translate-y-0"
        class="relative z-10 w-full max-w-md"
    >
        <div
            class="bg-white p-8 text-center border border-brand-100 rounded-2xl shadow-2xl"
        >
            <!-- Close button -->
            <button
                @click="show = false; dismissed = true;"
                class="absolute top-4 right-4 text-brand-400 hover:text-brand-900 transition-colors text-xl"
            >
                ‚úï
            </button>

            <!-- Gift icon -->
            <div class="text-5xl mb-4">üéÅ</div>

            <h3 class="text-2xl font-bold text-brand-900 mb-3 font-heading">
                {exitPopup.title}
            </h3>

            <p class="text-brand-600 mb-6 leading-relaxed">
                {exitPopup.description}
            </p>

            <a
                href={exitPopup.ctaHref}
                @click="show = false; dismissed = true;"
                class="btn-cta w-full text-center block shadow-lg shadow-gold-500/20"
                data-track="exit_popup_cta_click"
            >
                {exitPopup.cta}
            </a>

            <p class="text-sm text-brand-400 mt-4">
                {exitPopup.note}
            </p>
        </div>
    </div>
</div>
