---
import { process as processSteps } from "../data/content";
---

<section class="section-padding relative overflow-hidden" id="proceso">
  <div class="absolute inset-0 bg-gradient-to-b from-brand-950 to-brand-900"></div>

  <div class="relative z-10 container-narrow">
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 mb-6 text-sm font-semibold tracking-wider uppercase rounded-full border"
        style="color: var(--color-mango); background: rgba(243, 156, 18, 0.1); border-color: rgba(243, 156, 18, 0.25);">
        Proceso Simple
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">
        {processSteps.title}
      </h2>
      <hr class="section-divider" />
      <p class="text-lg text-brand-500 max-w-2xl mx-auto">
        {processSteps.subtitle}
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-4 gap-6 relative">
        <!-- Connection line (desktop) -->
        <div class="hidden md:block absolute top-12 left-[12%] right-[12%] h-0.5" style="background: linear-gradient(90deg, var(--color-terracotta), var(--color-mango), var(--color-avocado), var(--color-maiz));"></div>

        {processSteps.steps.map((step, i) => {
          const stepColors = ['var(--color-terracotta)', 'var(--color-mango)', 'var(--color-avocado)', 'var(--color-maiz)'];
          const color = stepColors[i % stepColors.length];
          return (
          <div class={`relative text-center animate-fade-in-up animate-delay-${(i + 1) * 100}`}>
            <!-- Number circle -->
            <div class="relative z-10 inline-flex items-center justify-center w-24 h-24 rounded-full bg-brand-900 mb-6 mx-auto" style={`border: 2px solid ${color}; box-shadow: 0 0 15px ${color}40;`}>
              <div class="text-center">
                <div class="text-3xl mb-0.5">{step.icon}</div>
                <span class="text-xs font-bold tracking-wider" style={`color: ${color};`}>{step.number}</span>
              </div>
            </div>

            <h3 class="text-xl font-bold text-white mb-3 font-heading">{step.title}</h3>
            <p class="text-brand-500 text-sm leading-relaxed">{step.description}</p>
          </div>
        )})}
      </div>
    </div>
  </div>
</section>
