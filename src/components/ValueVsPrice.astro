---
import { valueVsPrice, paymentPlan } from "../data/content";
---

<section class="section-padding relative overflow-hidden" id="precio">
    <div class="absolute inset-0 bg-gradient-to-b from-brand-950 to-brand-900">
    </div>
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full blur-3xl opacity-10"
        style="background: var(--color-terracotta);"
    >
    </div>

    <div class="relative z-10 container-narrow">
        <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white text-center mb-4 animate-fade-in-up"
        >
            {valueVsPrice.title}
        </h2>
        <hr class="section-divider" />

        <div class="max-w-3xl mx-auto">
            <div
                class="glass-card p-10 text-center border-gold-400/30 animate-fade-in-up animate-delay-100"
            >
                <!-- Total value -->
                <p class="text-brand-500 text-lg mb-2">
                    Valor total de todos los servicios
                </p>
                <p
                    class="text-5xl sm:text-6xl font-black text-white/30 line-through mb-6"
                >
                    {valueVsPrice.totalValue}
                </p>

                <!-- Final price -->
                <p class="text-brand-500 text-lg mb-2">Tu inversión hoy</p>
                <p
                    class="text-5xl sm:text-7xl font-black gradient-text-warm mb-4"
                >
                    {valueVsPrice.finalPrice}
                </p>

                <!-- Savings badge -->
                <div
                    class="inline-block px-5 py-2 mb-8 rounded-full bg-green-500/10 border border-green-500/30"
                >
                    <span class="text-green-400 font-bold">
                        Ahorras {valueVsPrice.savings} ({
                            valueVsPrice.savingsPercent
                        })
                    </span>
                </div>

                <!-- Payment Plan - PROMINENT -->
                <div
                    class="bg-brand-950/60 rounded-2xl p-8 mb-8 border border-gold-400/20 shadow-lg shadow-gold-500/5"
                >
                    <p
                        class="text-sm uppercase tracking-wider text-gold-400 font-semibold mb-3"
                    >
                        {paymentPlan.title}
                    </p>
                    <p class="text-4xl sm:text-5xl font-black text-white mb-2">
                        {paymentPlan.firstPayment}
                    </p>
                    <p class="text-brand-500 text-lg mb-4">
                        {paymentPlan.note}
                    </p>
                    <div
                        class="flex items-center justify-center gap-3 flex-wrap"
                    >
                        {
                            paymentPlan.methods.map((method) => (
                                <span class="px-3 py-1 text-sm bg-white/5 border border-white/10 rounded-full text-white/60">
                                    {method}
                                </span>
                            ))
                        }
                    </div>
                </div>

                <!-- CTA -->
                <a
                    href={valueVsPrice.ctaHref}
                    class="btn-cta text-lg"
                    style="background: linear-gradient(135deg, var(--color-mango), var(--color-terracotta)); box-shadow: 0 4px 20px rgba(243, 156, 18, 0.4); animation: pulse-glow 2s ease-in-out infinite;"
                >
                    {valueVsPrice.cta}
                    <span class="text-2xl">→</span>
                </a>
            </div>
        </div>
    </div>
</section>
