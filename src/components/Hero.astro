---
import { hero } from "../data/content";
---

<section
    class="relative min-h-screen flex items-center overflow-hidden pt-20 lg:pt-0"
>
    <!-- Background hero image with overlay -->
    <div class="absolute inset-0 z-0">
        <img
            src="/images/hero-latino-restaurant.png"
            alt="Interior de restaurante latino vibrante y elegante"
            class="w-full h-full object-cover"
            loading="eager"
        />
        <div
            class="absolute inset-0 bg-gradient-to-r from-brand-950/95 via-brand-950/90 to-brand-900/40"
        >
        </div>
        <div class="absolute inset-0 bg-black/20"></div>
    </div>

    <!-- Decorative elements -->
    <div
        class="absolute top-0 right-0 w-[600px] h-[600px] rounded-full blur-3xl opacity-20 animate-pulse-slow"
        style="background: var(--color-terracotta);"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-[500px] h-[500px] rounded-full blur-3xl opacity-15"
        style="background: var(--color-avocado);"
    >
    </div>
    <!-- Gold accent line -->
    <div
        class="absolute top-0 left-0 right-0 h-1 z-30"
        style="background: linear-gradient(90deg, var(--color-terracotta), var(--color-mango), var(--color-maiz), var(--color-avocado), var(--color-chile));"
    >
    </div>

    <div class="relative z-10 container-narrow w-full section-padding">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
            <!-- LEFT: Text Content -->
            <div class="text-left order-2 lg:order-1">
                <div
                    class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/10 border border-white/20 mb-6 backdrop-blur-sm animate-fade-in-up"
                >
                    <span
                        class="w-2 h-2 rounded-full bg-accent-green animate-pulse"
                    ></span>
                    <span
                        class="text-xs font-bold text-white uppercase tracking-wider"
                        >Sistema Integral 360°</span
                    >
                </div>

                <h1
                    class="text-4xl sm:text-5xl lg:text-6xl font-black leading-tight mb-6 animate-fade-in-up animate-delay-100"
                >
                    <span class="text-white block mb-2"
                        >{hero.headline.split(" ").slice(0, 4).join(" ")}</span
                    >
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-gold-400 via-gold-200 to-gold-500"
                    >
                        {hero.headline.split(" ").slice(4).join(" ")}
                    </span>
                </h1>

                <!-- Benefits List (New "Info") -->
                <ul class="space-y-3 mb-8 animate-fade-in-up animate-delay-200">
                    {
                        hero.benefits &&
                            hero.benefits.map((benefit) => (
                                <li class="flex items-center gap-3 text-lg text-white/90">
                                    <div class="w-6 h-6 rounded-full bg-accent-green/20 flex items-center justify-center border border-accent-green/40">
                                        <span class="text-accent-green text-xs">
                                            ✓
                                        </span>
                                    </div>
                                    {benefit}
                                </li>
                            ))
                    }
                </ul>

                <p
                    class="text-lg text-brand-300 mb-8 max-w-xl animate-fade-in-up animate-delay-300 border-l-4 border-gold-500/30 pl-4"
                >
                    {hero.subheadline}
                </p>

                <div
                    class="animate-fade-in-up animate-delay-400 flex flex-col sm:flex-row gap-4"
                >
                    <a
                        href={hero.ctaHref}
                        class="btn-cta text-lg shadow-xl shadow-gold-500/20 hover:shadow-gold-500/40 transform hover:-translate-y-1 transition-all duration-300"
                        style="background: linear-gradient(135deg, var(--color-mango), var(--color-terracotta));"
                    >
                        {hero.cta}
                        <span class="ml-2">→</span>
                    </a>
                </div>

                <div
                    class="animate-fade-in-up animate-delay-500 mt-8 flex items-center gap-4 text-sm text-white/40"
                >
                    <p>Oferta limitada para Febrero</p>
                </div>
            </div>

            <!-- RIGHT: Video Thumbnail (New) -->
            <div
                class="order-1 lg:order-2 relative animate-fade-in duration-1000"
            >
                <!-- Video Card -->
                <div
                    class="relative rounded-2xl overflow-hidden shadow-2xl border border-white/10 group transform rotate-1 hover:rotate-0 transition-transform duration-500"
                >
                    <div class="aspect-video bg-black relative">
                        <!-- Poster Image (using same hero for now as fallback or specific thumb) -->
                        <img
                            src="/images/hero-video-thumb.jpg"
                            class="w-full h-full object-cover opacity-60 group-hover:scale-105 transition-transform duration-700"
                            alt="Ver video explicativo"
                            onerror="this.src='/images/hero-latino-restaurant.png'"
                        />
                        <div
                            class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"
                        >
                        </div>

                        <!-- Play Button -->
                        <button
                            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-20 h-20 bg-gold-500/90 rounded-full flex items-center justify-center shadow-lg shadow-gold-500/50 group-hover:scale-110 transition-transform duration-300 z-20 backdrop-blur-sm hover:bg-gold-400"
                        >
                            <span class="sr-only">Ver Video</span>
                            <svg
                                class="w-8 h-8 text-brand-950 ml-1"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path d="M8 5v14l11-7z"></path>
                            </svg>
                            <!-- Ripple effect -->
                            <div
                                class="absolute inset-0 rounded-full animate-ping opacity-30 bg-gold-400"
                            >
                            </div>
                        </button>

                        <div class="absolute bottom-6 left-6 z-20">
                            <span
                                class="text-gold-400 text-xs font-bold uppercase tracking-widest mb-1 block"
                                >Ver en 2 minutos</span
                            >
                            <p class="text-white font-bold text-lg">
                                Cómo Transformar Tu Restaurante
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Decorative floating elements behind video -->
                <div
                    class="absolute -z-10 -top-10 -right-10 w-full h-full border-2 border-white/5 rounded-2xl"
                >
                </div>
                <div
                    class="absolute -z-10 -bottom-10 -left-10 w-40 h-40 bg-brand-600/30 rounded-full blur-2xl"
                >
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll indicator -->
    <div
        class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce hidden md:block"
    >
        <div
            class="w-6 h-10 border-2 border-white/10 rounded-full flex justify-center pt-2 backdrop-blur-sm"
        >
            <div class="w-1.5 h-3 bg-white/50 rounded-full"></div>
        </div>
    </div>
</section>
