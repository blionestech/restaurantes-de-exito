---
import { packageIncludes } from "../data/content";

const accentColors = ["#f35d09", "#f30606", "#f35d09", "#f30606", "#f35d09"];

// Sample images from existing repo assets â€” replace with real images later
const categoryImages = [
  "/images/resource-branding.webp",
  "/images/resource-menus.webp",
  "/images/resource-web.webp",
  "/images/resource-uniforms.webp",
  "/images/resource-manuals.webp",
];
---

<section class="section-padding relative overflow-hidden" id="paquete">
  <div class="relative z-10 container-narrow">
    <div class="text-center mb-16">
      <div
        class="inline-flex items-center gap-2 px-4 py-1.5 mb-6 rounded-full border shadow-sm"
        style="background: rgba(243, 93, 9, 0.05); border-color: rgba(243, 93, 9, 0.25);"
      >
        <span class="text-lg">ðŸ“¦</span>
        <span
          class="text-xs sm:text-sm font-bold tracking-wider uppercase"
          style="color: #f35d09;"
        >
          El Paquete Completo
        </span>
      </div>
      <h2
        class="text-3xl sm:text-4xl lg:text-5xl font-bold font-heading text-brand-900 mb-4"
      >
        {packageIncludes.title}
      </h2>
      <hr class="section-divider" />
      <p class="text-lg text-brand-600 max-w-2xl mx-auto">
        {packageIncludes.subtitle}
      </p>
    </div>

    <!-- Grouped categories -->
    <div class="space-y-6 mb-12">
      {
        packageIncludes.categories.map((category, catIdx) => (
          <div
            class="glass-card overflow-hidden animate-fade-in-up"
            style={`border-left: 4px solid ${accentColors[catIdx % accentColors.length]};`}
          >
            <div class="flex flex-col md:flex-row">
              {/* Image space */}
              <div class="md:w-56 lg:w-64 shrink-0">
                <div class="h-48 md:h-full w-full bg-gradient-to-br from-brand-100 to-brand-50 overflow-hidden">
                  <img
                    src={categoryImages[catIdx]}
                    alt={category.name}
                    class="w-full h-full object-cover"
                  />
                </div>
              </div>

              {/* Content */}
              <div class="flex-1 p-6 sm:p-8">
                <div class="flex items-center gap-3 mb-5">
                  <span class="text-3xl">{category.icon}</span>
                  <h3 class="text-xl font-bold text-brand-900 font-heading">
                    {category.name}
                  </h3>
                </div>

                <div class="space-y-3">
                  {category.items.map((item) => (
                    <div class="flex items-start justify-between gap-4 py-2 border-b border-brand-100 last:border-0">
                      <div class="flex items-start gap-2.5">
                        <span
                          style={`color: ${accentColors[catIdx % accentColors.length]};`}
                          class="mt-0.5 shrink-0 font-bold"
                        >
                          âœ“
                        </span>
                        <span class="text-brand-700 text-sm sm:text-base">
                          {item.name}
                        </span>
                      </div>
                      <span
                        class="px-3 py-1 rounded-full text-xs font-bold whitespace-nowrap"
                        style={`color: ${accentColors[catIdx % accentColors.length]}; background: ${accentColors[catIdx % accentColors.length]}15;`}
                      >
                        Valor: {item.value}
                      </span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="text-center animate-fade-in-up animate-delay-600">
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="#precio"
          class="btn-cta text-lg shadow-xl"
          data-track="package_includes_cta_click"
        >
          Estoy listo para el Ã©xito â†’
        </a>
        <a
          href="#precio"
          class="btn-secondary text-lg"
          data-track="package_includes_secondary_cta_click"
        >
          Ver el Precio del Paquete
        </a>
      </div>
      <p class="mt-6 text-sm text-brand-500 font-medium">
        {packageIncludes.shippingNote}
      </p>
    </div>
  </div>
</section>
