---
import { packageIncludes } from "../data/content";
---

<section class="section-padding relative overflow-hidden" id="paquete">
  <div class="absolute inset-0 bg-gradient-to-b from-brand-950 via-brand-900 to-brand-950"></div>

  <div class="relative z-10 container-narrow">
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 mb-6 text-sm font-semibold tracking-wider uppercase rounded-full border"
        style="color: var(--color-terracotta); background: rgba(211, 84, 0, 0.1); border-color: rgba(211, 84, 0, 0.25);">
        El Paquete Completo
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">
        {packageIncludes.title}
      </h2>
      <hr class="section-divider" />
      <p class="text-lg text-brand-500 max-w-2xl mx-auto">
        {packageIncludes.subtitle}
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {packageIncludes.blocks.map((block, i) => (
        <div class={`glass-card p-8 flex flex-col animate-fade-in-up animate-delay-${(i + 1) * 100} card-accent-top card-accent-${(i % 6) + 1}`}>
          <!-- Header -->
          <div class="flex items-center gap-3 mb-5">
            <span class="text-3xl">{block.icon}</span>
            <div>
              <h3 class="text-lg font-bold text-white font-heading">{block.name}</h3>
              <span class="text-sm text-gold-400 font-semibold">Valor: {block.value}</span>
            </div>
          </div>

          <!-- Items -->
          <ul class="space-y-3 flex-1">
            {block.items.map((item) => (
              <li class="flex items-start gap-2.5 text-brand-500">
                <span class="text-gold-400 mt-1 shrink-0 text-sm">â–¸</span>
                <span class="text-sm">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
