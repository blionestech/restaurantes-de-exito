---
import { resources } from "../data/content";
---

<section class="section-padding relative">
    <div class="container-narrow">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
                {resources.title}
            </h2>
            <p class="text-lg text-brand-500">
                {resources.subtitle}
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                resources.items.map((item, i) => (
                    <div 
                        class="glass-card overflow-hidden group hover:border-gold-400/50 transition-colors duration-300"
                        style={`animation-delay: ${i * 100}ms`}
                    >
                        <div class="aspect-video bg-brand-800 relative overflow-hidden">
                             <!-- Image placeholder or actual image -->
                             <div class="absolute inset-0 bg-gradient-to-t from-brand-950 to-transparent z-10"></div>
                             <div class="absolute inset-0 flex items-center justify-center text-4xl transform group-hover:scale-110 transition-transform duration-500">
                                üéÅ
                             </div>
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-white mb-3">
                                {item.title}
                            </h3>
                            <ul class="space-y-2">
                                {item.points.map(point => (
                                    <li class="flex items-start gap-2 text-sm text-brand-400">
                                        <span class="text-gold-500 mt-0.5">‚Ä¢</span>
                                        {point}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
