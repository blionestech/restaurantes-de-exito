---
import { guarantee } from "../data/content";
---

<section class="section-padding relative overflow-hidden" id="garantia">
    <div class="absolute inset-0 bg-gradient-to-b from-brand-900 to-brand-950">
    </div>

    <div class="relative z-10 container-narrow">
        <div class="max-w-3xl mx-auto text-center">
            <!-- Shield icon -->
            <div class="animate-fade-in-up mb-8">
                <div
                    class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-green-500/10 border-2 border-green-500/30"
                >
                    <span class="text-4xl">üõ°Ô∏è</span>
                </div>
            </div>

            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6 animate-fade-in-up animate-delay-100"
            >
                {guarantee.title}
            </h2>

            <p
                class="text-xl text-brand-500 mb-10 animate-fade-in-up animate-delay-200 max-w-2xl mx-auto leading-relaxed"
            >
                {guarantee.description}
            </p>

            <div
                class="grid sm:grid-cols-2 gap-4 text-left animate-fade-in-up animate-delay-300"
            >
                {
                    guarantee.points.map((point) => (
                        <div class="flex items-start gap-3 p-5 rounded-xl bg-green-500/5 border border-green-500/15">
                            <span class="text-green-400 text-xl mt-0.5 shrink-0">
                                ‚úì
                            </span>
                            <span class="text-white/90">{point}</span>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
