---
import { videoExplainer } from "../data/content";
---

<section class="section-padding relative overflow-hidden">
    <div class="container-narrow">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <!-- Text Content -->
            <div class="animate-fade-in-up">
                <span
                    class="text-gold-500 font-bold tracking-wider uppercase text-sm mb-2 block"
                >
                    El Sistema
                </span>
                <h2 class="text-3xl sm:text-4xl font-bold text-brand-900 mb-6">
                    {videoExplainer.title}
                </h2>
                <p class="text-lg text-brand-600 mb-8 leading-relaxed">
                    {videoExplainer.description}
                </p>

                <ul class="space-y-4">
                    {
                        videoExplainer.points.map((point) => (
                            <li class="flex items-center gap-3 text-brand-700">
                                <span class="flex items-center justify-center w-6 h-6 rounded-full bg-gold-500/10 text-gold-600 text-sm">
                                    ✓
                                </span>
                                {point}
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Video/GIF Display -->
            <div class="relative animate-fade-in-up animate-delay-200">
                <div
                    class="glass-card p-2 rounded-2xl border-gold-400/30 transform hover:scale-[1.02] transition-transform duration-500"
                >
                    <div
                        class="relative aspect-video bg-black rounded-xl overflow-hidden shadow-2xl"
                    >
                        {
                            videoExplainer.gif ? (
                                <img
                                    src={videoExplainer.gif}
                                    alt={videoExplainer.title}
                                    class="w-full h-full object-cover"
                                />
                            ) : (
                                /* Fallback to original video placeholder if no GIF */
                                <div
                                    class="relative w-full h-full group cursor-pointer"
                                    data-track="video_explainer_play"
                                >
                                    <div class="absolute inset-0 bg-brand-900 flex items-center justify-center">
                                        <span class="text-brand-600 text-6xl opacity-30">
                                            ▶
                                        </span>
                                    </div>
                                    <div class="absolute inset-0 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                        <div class="w-16 h-16 bg-gold-500 rounded-full flex items-center justify-center shadow-lg shadow-gold-500/30 pl-1">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="currentColor"
                                                class="w-8 h-8 text-black"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M4.5 5.653c0-1.426 1.529-2.33 2.779-1.643l11.54 6.348c1.295.712 1.295 2.573 0 3.285L7.28 19.991c-1.25.687-2.779-.217-2.779-1.643V5.653z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                            )
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
