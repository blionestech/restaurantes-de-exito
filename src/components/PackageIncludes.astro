---
import { packageIncludes } from "../data/content";
---

<section class="section-padding relative overflow-hidden" id="paquete">
  <!-- No dark bg -->

  <div class="relative z-10 container-narrow">
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 mb-6 text-sm font-semibold tracking-wider uppercase rounded-full border"
        style="color: var(--color-terracotta); background: rgba(211, 84, 0, 0.05); border-color: rgba(211, 84, 0, 0.2);">
        El Paquete Completo
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-brand-900 mb-4">
        {packageIncludes.title}
      </h2>
      <hr class="section-divider" />
      <p class="text-lg text-brand-600 max-w-2xl mx-auto">
        {packageIncludes.subtitle}
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {packageIncludes.blocks.map((block, i) => (
        <div class={`glass-card p-8 flex flex-col animate-fade-in-up animate-delay-${(i + 1) * 100} card-accent-top card-accent-${(i % 6) + 1}`}>
          <!-- Header -->
          <div class="flex items-center gap-3 mb-5">
            <span class="text-3xl">{block.icon}</span>
            <div>
              <h3 class="text-lg font-bold text-brand-900 font-heading">{block.name}</h3>
              <span class="text-sm text-gold-600 font-semibold">Valor: {block.value}</span>
            </div>
          </div>

          <!-- Items -->
          <ul class="space-y-3 flex-1">
            {block.items.map((item) => (
              <li class="flex items-start gap-2.5 text-brand-600">
                <span class="text-gold-500 mt-1 shrink-0 text-sm">▸</span>
                <span class="text-sm">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="text-center animate-fade-in-up animate-delay-600">
        <a href="#cta-final" class="btn-cta text-lg shadow-xl shadow-gold-500/20 hover:shadow-gold-500/30" data-track="package_includes_cta_click">
            Quiero Todo el Paquete Ahora →
        </a>
        <p class="mt-4 text-sm text-brand-500 font-medium">
            {packageIncludes.shippingNote}
        </p>
    </div>
  </div>
</section>
