---
import { hero, stats as heroStats } from "../data/content";
---

<section class="relative pt-20 lg:pt-32 pb-20 overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
        <img
            src="/images/fondo_hero.webp"
            alt="Fondo de restaurante"
            class="w-full h-full object-cover opacity-30"
        />
        <div
            class="absolute inset-0 bg-gradient-to-b from-slate-50/40 via-slate-50/30 to-slate-50/40"
        >
        </div>
    </div>

    <!-- Bottom Fade Gradient -->
    <div
        class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-slate-50 to-transparent z-10"
    >
    </div>

    <!-- Background elements (Locals refined or removed if global is sufficient, keeping some for specific hero impact if needed, but user wanted continuous. Let's rely on global or adjust opacity) -->
    <!-- Keeping these local ones as they are specific to Hero's initial impact, but ensuring they don't clash. -->
    <div
        class="absolute top-0 right-0 w-[800px] h-[800px] rounded-full blur-3xl opacity-5 animate-pulse-slow pointer-events-none"
        style="background: var(--color-terracotta);"
    >
    </div>

    <div class="relative z-10 container-narrow w-full section-padding">
        <div class="flex flex-col items-center text-center">
            <!-- Badge -->
            <div
                class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-900 border border-gold-500/50 mb-10 shadow-lg shadow-brand-900/20 animate-fade-in-up hover:scale-105 transition-transform duration-300"
            >
                <div class="relative flex items-center justify-center">
                    <span
                        class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse absolute inline-flex"
                    ></span>
                    <span
                        class="w-2 h-2 rounded-full bg-emerald-400 relative inline-flex opacity-75"
                    ></span>
                </div>
                <span
                    class="text-xs sm:text-sm font-bold text-white uppercase tracking-wider"
                    >Restaurantero de Éxito</span
                >
            </div>

            <!-- Headline -->
            <h1
                class="text-4xl sm:text-5xl lg:text-7xl font-black leading-tight mb-6 animate-fade-in-up animate-delay-100 max-w-5xl"
            >
                <span class="text-brand-900 block mb-2"
                    >{hero.headline.split(" ").slice(0, 4).join(" ")}</span
                >
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-terracotta via-gold-500 to-mango"
                >
                    {hero.headline.split(" ").slice(4).join(" ")}
                </span>
            </h1>

            <!-- Subheadline -->
            <p
                class="text-xl text-brand-600 mb-10 max-w-2xl animate-fade-in-up animate-delay-200"
            >
                {hero.subheadline}
            </p>

            <!-- Benefits -->
            <ul
                class="flex flex-wrap justify-center gap-4 sm:gap-8 mb-12 animate-fade-in-up animate-delay-300"
            >
                {
                    hero.benefits &&
                        hero.benefits.map((benefit) => (
                            <li class="flex items-center gap-2 text-brand-700">
                                <div class="w-5 h-5 rounded-full bg-accent-green/10 flex items-center justify-center text-accent-green">
                                    <svg
                                        class="w-3 h-3"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="3"
                                            d="M5 13l4 4L19 7"
                                        />
                                    </svg>
                                </div>
                                <span class="font-medium">{benefit}</span>
                            </li>
                        ))
                }
            </ul>

            <!-- CTA -->
            <div
                class="animate-fade-in-up animate-delay-400 flex flex-col sm:flex-row gap-4 mb-16"
            >
                <a
                    href={hero.ctaHref}
                    class="btn-cta text-lg shadow-xl shadow-orange-500/20 hover:shadow-orange-500/30 transform hover:-translate-y-1 transition-all duration-300"
                >
                    {hero.cta}
                    <span class="ml-2">→</span>
                </a>
            </div>

            <!-- Video Section (Centered & Large) -->
            <div
                class="w-full max-w-5xl relative animate-fade-in-up animate-delay-500"
            >
                <!-- Video Card -->
                <div
                    class="relative rounded-2xl overflow-hidden shadow-2xl shadow-brand-900/10 border border-brand-900/5 group"
                >
                    <div class="aspect-video bg-black relative">
                        <video
                            class="w-full h-full object-cover"
                            poster={hero.videoThumbnail}
                            controls
                            playsinline
                        >
                            <source src="/Video_hero.mp4" type="video/mp4" />
                            Tu navegador no soporta video HTML5.
                        </video>
                    </div>
                </div>

                <!-- Decorative elements behind video -->
                <div
                    class="absolute -z-10 -bottom-10 -right-10 w-40 h-40 bg-mango/20 rounded-full blur-3xl"
                >
                </div>
                <div
                    class="absolute -z-10 top-10 -left-10 w-40 h-40 bg-terracotta/20 rounded-full blur-3xl"
                >
                </div>
            </div>

            <!-- Stats Grid (Integrated into Hero) -->
            <div
                class="w-full max-w-5xl mt-16 animate-fade-in-up animate-delay-600"
            >
                <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
                    {
                        heroStats.map((stat, i) => (
                            <div
                                class="glass-card p-6 text-center"
                                style={`animation-delay: ${i * 100}ms; border-top: 3px solid var(--color-gold-400);`}
                            >
                                <div class="text-3xl mb-2">{stat.icon}</div>
                                <p class="text-3xl sm:text-4xl font-black text-brand-900 mb-1 tracking-tight">
                                    {stat.value}
                                </p>
                                <p class="text-xs sm:text-sm font-bold uppercase tracking-wider text-brand-600">
                                    {stat.label}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>
