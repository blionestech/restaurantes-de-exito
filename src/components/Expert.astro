---
import { expert } from "../data/content";
---

<section class="section-padding relative overflow-hidden">
    <div class="container-narrow">
        <div class="glass-card p-8 md:p-12 relative overflow-hidden">
            <!-- Background Accent -->
            <div
                class="absolute -right-20 -top-20 w-64 h-64 bg-brand-800/20 rounded-full blur-3xl"
            >
            </div>

            <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
                <!-- Expert Image -->
                <div class="relative w-32 h-32 md:w-48 md:h-48 shrink-0">
                    <div
                        class="w-full h-full rounded-full border-4 border-gold-400/30 overflow-hidden bg-brand-800 relative shadow-2xl"
                    >
                        <!-- Placeholder for Expert Image -->
                        <div
                            class="absolute inset-0 flex items-center justify-center text-6xl bg-brand-900 text-brand-700"
                        >
                            üë®‚Äçüç≥
                        </div>
                    </div>
                    <div
                        class="absolute bottom-2 right-2 flex items-center justify-center w-10 h-10 bg-gold-500 rounded-full text-brand-950 font-bold shadow-lg"
                    >
                        ‚úì
                    </div>
                </div>

                <!-- Expert Info -->
                <div class="text-center md:text-left">
                    <span
                        class="text-gold-400 font-bold tracking-wider uppercase text-xs mb-2 block"
                    >
                        Creado por Expertos
                    </span>
                    <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">
                        {expert.name}
                    </h2>
                    <p class="text-brand-500 font-medium mb-4">
                        {expert.role}
                    </p>
                    <p class="text-brand-400 leading-relaxed max-w-2xl italic">
                        "{expert.bio}"
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
