---
import FunnelLayout from "../layouts/FunnelLayout.astro";
import Hero from "../components/Hero.astro";
import Benefits from "../components/Benefits.astro";
import PackageIncludes from "../components/PackageIncludes.astro";
import VideoReviews from "../components/VideoReviews.astro";
import ValueVsPrice from "../components/ValueVsPrice.astro";
import FAQ from "../components/FAQ.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import ExitPopup from "../components/ExitPopup.astro";
---

<FunnelLayout>
	<!-- 1. Hero: Hook + Video + CTA -->
	<Hero />

	<!-- 2. Benefits: Short explainer -->
	<Benefits />

	<!-- 3. Package: Everything that's included -->
	<PackageIncludes />

	<!-- 4. Video Reviews: Social proof -->
	<VideoReviews />

	<!-- 5. Value vs Price: Close the deal -->
	<ValueVsPrice />

	<!-- 6. FAQ: Handle objections -->
	<FAQ />

	<!-- 7. Footer -->
	<Footer />

