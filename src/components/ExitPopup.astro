---
import { exitPopup } from "../data/content";
---

<!-- Bonus CTA Section (Previously Exit popup) -->
<section
    class="py-20 lg:py-24 bg-brand-50 relative overflow-hidden flex items-center justify-center"
    id="regalo"
>
    <!-- Background styling for smooth transition towards footer -->
    <div
        class="absolute inset-0 bg-gradient-to-b from-brand-50 to-brand-100/50"
    >
    </div>
    <div
        class="absolute -top-40 right-[-10%] w-[500px] h-[500px] bg-orange-100/40 rounded-full blur-[80px] pointer-events-none"
    >
    </div>
    <div
        class="absolute -bottom-40 left-[-10%] w-[500px] h-[500px] bg-red-100/40 rounded-full blur-[80px] pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-4 sm:px-6 relative z-10 max-w-4xl">
        <div
            class="bg-white p-10 sm:p-14 lg:p-16 border-2 border-brand-100 rounded-[2.5rem] shadow-2xl relative overflow-hidden flex flex-col items-center text-center"
        >
            <!-- Gift icon -->
            <div
                class="text-6xl sm:text-7xl mb-6 transform hover:scale-110 transition-transform duration-300"
            >
                üéÅ
            </div>

            <h3
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-brand-900 mb-5 font-heading leading-tight"
            >
                {exitPopup.title}
            </h3>

            <p
                class="text-lg sm:text-xl text-brand-600 mb-8 leading-relaxed max-w-2xl text-balance"
            >
                {exitPopup.description}
            </p>

            <a
                href={exitPopup.ctaHref}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-cta text-xl px-12 py-5 shadow-xl hover:-translate-y-1 transition-transform"
                data-track="bonus_section_cta_click"
            >
                {exitPopup.cta}
            </a>

            <p
                class="text-sm font-medium text-brand-400 mt-6 bg-brand-50/80 px-4 py-2 rounded-full inline-block"
            >
                ‚ú® {exitPopup.note}
            </p>
        </div>
    </div>
</section>
