---
import { urgency, socialProof } from "../data/content";
---

<section class="py-10 relative overflow-hidden" id="urgencia">
    <!-- No dark bg -->

    <div class="relative z-10 container-narrow">
        <div class="max-w-3xl mx-auto">
            <!-- Urgency Banner -->
            <div
                class="glass-card p-8 text-center border-gold-400/30 animate-fade-in-up"
            >
                <!-- Badge -->
                <div
                    class="inline-block px-4 py-1 mb-4 text-sm font-bold tracking-wider uppercase bg-red-500/10 text-red-600 rounded-full border border-red-500/20"
                    style="animation: pulse-glow 2s ease-in-out infinite;"
                >
                    âš¡ {urgency.badge}
                </div>

                <p class="text-xl text-brand-800 mb-6">
                    {urgency.message}
                </p>

                <!-- Spots counter -->
                <div class="flex items-center justify-center gap-2 mb-6">
                    {
                        Array.from({ length: urgency.spotsTotal }).map(
                            (_, i) => {
                                const spotColors = [
                                    "#c2703e",
                                    "#f39c12",
                                    "#27ae60",
                                    "#f1c40f",
                                    "#8e44ad",
                                ];
                                const color = spotColors[i % spotColors.length];
                                return (
                                    <div
                                        class={`w-12 h-12 rounded-lg flex items-center justify-center text-lg font-bold transition-all ${
                                            i < urgency.spotsLeft
                                                ? ""
                                                : "line-through opacity-50"
                                        }`}
                                        style={
                                            i < urgency.spotsLeft
                                                ? `background: ${color}20; border: 2px solid ${color}50; color: ${color};`
                                                : `background: rgba(239,68,68,0.1); border: 2px solid rgba(239,68,68,0.2); color: rgba(239,68,68,0.6);`
                                        }
                                    >
                                        {i + 1}
                                    </div>
                                );
                            },
                        )
                    }
                </div>

                <p class="text-2xl font-bold" style="color: #c2703e;">
                    {urgency.spotsLeft} cupos disponibles en {urgency.month}
                </p>
            </div>

            <!-- Social Proof Counter -->
            <div class="mt-8 text-center animate-fade-in-up animate-delay-200">
                <div
                    class="inline-flex items-center gap-3 px-6 py-3 rounded-full bg-white/50 border border-brand-900/10 shadow-sm"
                >
                    <div class="flex -space-x-2">
                        <div
                            class="w-8 h-8 rounded-full bg-gradient-to-br from-gold-400 to-gold-600 border-2 border-white flex items-center justify-center text-brand-950 text-xs font-bold"
                        >
                            C
                        </div>
                        <div
                            class="w-8 h-8 rounded-full bg-gradient-to-br from-gold-400 to-gold-600 border-2 border-white flex items-center justify-center text-brand-950 text-xs font-bold"
                        >
                            M
                        </div>
                        <div
                            class="w-8 h-8 rounded-full bg-gradient-to-br from-gold-400 to-gold-600 border-2 border-white flex items-center justify-center text-brand-950 text-xs font-bold"
                        >
                            J
                        </div>
                        <div
                            class="w-8 h-8 rounded-full bg-gradient-to-br from-gold-300 to-gold-500 border-2 border-white flex items-center justify-center text-brand-950 text-xs font-bold"
                        >
                            +
                        </div>
                    </div>
                    <p class="text-brand-700 text-sm">
                        <span class="text-gold-600 font-bold text-lg"
                            >{socialProof.count}+</span
                        >
                        {socialProof.label}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
