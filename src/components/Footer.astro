---
import { footer } from "../data/content";
---

<footer class="relative overflow-hidden bg-brand-900 text-white">
    <div
        class="absolute top-0 left-0 right-0 h-[2px]"
        style="background: linear-gradient(90deg, #f35d09, #f30606, #f35d09, #f30606, #f35d09);"
    >
    </div>

    <div class="relative z-10 container-narrow section-padding py-12 sm:py-16">
        <div class="grid sm:grid-cols-3 gap-8 items-start">
            <!-- Brand -->
            <div>
                <p class="text-xl font-heading font-bold text-white mb-2">
                    {footer.brand}
                </p>
                <div class="flex items-center gap-2 mt-2">
                    <img
                        src="/restauranteros-logo-blanco.png"
                        alt="RestauranterosUSA"
                        class="h-10 w-auto opacity-80"
                    />
                    <p class="text-sm text-brand-400">
                        Un producto de <span class="text-white/70 font-medium"
                            >RestauranterosUSA</span
                        >
                    </p>
                </div>
            </div>

            <!-- Contact -->
            <div class="text-center">
                <p class="text-sm text-brand-400 mb-2">Contacto</p>
                <a
                    href={`mailto:${footer.contact.email}`}
                    class="block text-sm text-brand-300 hover:text-orange-400 transition-colors"
                >
                    {footer.contact.email}
                </a>
                <a
                    href={`tel:${footer.contact.phone.replace(/[\s()-]/g, "")}`}
                    class="block text-sm text-brand-300 hover:text-orange-400 transition-colors mt-1"
                >
                    {footer.contact.phone}
                </a>
            </div>

            <!-- Links -->
            <div class="sm:text-right">
                <div class="flex flex-wrap gap-4 sm:justify-end">
                    {
                        footer.links.map((link) => (
                            <a
                                href={link.href}
                                class="text-sm text-brand-300 hover:text-orange-400 transition-colors"
                            >
                                {link.label}
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="mt-10 pt-6 border-t border-white/10 text-center">
            <p class="text-xs text-brand-500">{footer.copyright}</p>
        </div>
    </div>
</footer>
