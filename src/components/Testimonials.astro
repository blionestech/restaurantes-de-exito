---
import { testimonials } from "../data/content";
---

<section class="section-padding relative overflow-hidden" id="testimonios">
  <div class="absolute inset-0 bg-gradient-to-b from-brand-950 to-brand-900">
  </div>

  <div class="relative z-10 container-narrow">
    <div class="text-center mb-16">
      <span
        class="inline-block px-4 py-1.5 mb-6 text-sm font-semibold tracking-wider uppercase rounded-full border"
        style="color: #8e44ad; background: rgba(142, 68, 173, 0.1); border-color: rgba(142, 68, 173, 0.25);"
      >
        Testimonios
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">
        {testimonials.title}
      </h2>
      <hr class="section-divider" />
      <p class="text-lg text-brand-500 max-w-2xl mx-auto">
        {testimonials.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {
        testimonials.items.map((t, i) => {
          const avatarColors = [
            ["#c2703e", "#a85d32"],
            ["#27ae60", "#1e8449"],
            ["#8e44ad", "#6c3483"],
          ];
          const [from, to] = avatarColors[i % avatarColors.length];
          return (
            <div
              class={`glass-card p-8 flex flex-col animate-fade-in-up animate-delay-${(i + 1) * 100} card-accent-top card-accent-${(i % 6) + 1}`}
            >
              {/* Stars */}
              <div class="flex gap-1 mb-4">
                {Array.from({ length: t.rating }).map(() => (
                  <span class="text-gold-400 text-xl">â˜…</span>
                ))}
              </div>

              {/* Quote */}
              <p class="text-white/80 leading-relaxed flex-1 mb-6 italic">
                "{t.quote}"
              </p>

              {/* Author */}
              <div class="flex items-center gap-4 pt-4 border-t border-white/10">
                <div
                  class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg"
                  style={`background: linear-gradient(135deg, ${from}, ${to});`}
                >
                  {t.name.charAt(0)}
                </div>
                <div>
                  <p class="text-white font-semibold">{t.name}</p>
                  <p class="text-brand-500 text-sm">{t.role}</p>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
