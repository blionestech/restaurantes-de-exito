---
import { problems } from "../data/content";
---

<section class="section-padding relative overflow-hidden" id="problema">
    <!-- Subtle bg pattern light mode -->
    <div
        class="absolute top-1/3 right-0 w-[500px] h-[500px] rounded-full blur-3xl"
        style="background: rgba(192, 57, 43, 0.05);"
    >
    </div>

    <div class="relative z-10 container-narrow">
        <div class="text-center max-w-3xl mx-auto mb-16 animate-fade-in-up">
            <span class="text-brand-600 font-bold tracking-wider uppercase text-sm mb-2 block">
                Â¿Te suena familiar?
            </span>
            <h2 class="text-3xl sm:text-4xl font-bold text-brand-900 mb-4">
                {problems.title}
            </h2>
            <p class="text-xl text-brand-600">
                {problems.subtitle}
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            {
                problems.items.slice(0, 3).map((problem, i) => (
                    <div 
                        class="glass-card p-8 text-center relative group hover:border-brand-200 transition-colors duration-300"
                        style={`animation-delay: ${i * 100}ms`}
                    >
                        <!-- Icon Circle -->
                        <div class="w-20 h-20 mx-auto bg-brand-50 rounded-full flex items-center justify-center text-4xl mb-6 shadow-sm group-hover:scale-110 transition-transform duration-300 border border-brand-100">
                             {problem.icon}
                        </div>
                        
                        <h3 class="text-xl font-bold text-brand-900 mb-4 group-hover:text-brand-700 transition-colors">
                            {problem.title}
                        </h3>
                        <p class="text-brand-600 leading-relaxed text-sm">
                            {problem.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
