---
import { benefits } from "../data/content";
---

<section class="section-padding relative overflow-hidden bg-white">
    <!-- Decorative background -->
    <div class="absolute inset-0 pointer-events-none">
        <div
            class="absolute top-0 right-1/4 w-[500px] h-[500px] bg-mango/10 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute bottom-0 left-1/4 w-[600px] h-[600px] bg-terracotta/5 rounded-full blur-3xl"
        >
        </div>
    </div>

    <div class="relative z-10 container-narrow">
        <div class="text-center mb-16 px-4">
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-brand-900 mb-6 font-heading tracking-tight animate-fade-in-up"
            >
                {benefits.title}
                <span
                    class="text-transparent bg-clip-text"
                    style="background-image: linear-gradient(to right, #f35d09, #f30606);"
                    >{benefits.titleHighlight}</span
                >
            </h2>
            <p
                class="text-xl text-brand-600 max-w-2xl mx-auto font-medium animate-fade-in-up animate-delay-100"
            >
                {benefits.subtitle}
            </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-6 lg:gap-8 px-4">
            <!-- Card 1: Branding / Imagen -->
            <div
                class="lg:col-span-2 relative group rounded-3xl overflow-hidden shadow-2xl animate-fade-in-up animate-delay-200"
            >
                <!-- Background Image -->
                <div class="absolute inset-0 z-0">
                    <img
                        src="/images/resource-branding.webp"
                        alt="Men√∫s Premium"
                        class="w-full h-full object-cover opacity-40 group-hover:scale-105 transition-transform duration-700"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-white via-white/80 to-white/40"
                    >
                    </div>
                </div>

                <div
                    class="relative z-10 h-full p-8 sm:p-12 flex flex-col justify-end min-h-[300px] sm:min-h-[400px]"
                >
                    <!-- Floating stat badge -->
                    <div
                        class="sm:absolute sm:top-8 sm:right-8 mb-6 sm:mb-0 glass-card rounded-2xl p-3 sm:p-4 shadow-xl inline-flex sm:block items-center gap-3 sm:gap-0 self-start sm:self-auto transform group-hover:-translate-y-2 transition-transform duration-500"
                        style="border-top: 3px solid #f35d09;"
                    >
                        <div
                            class="flex items-center gap-2 mb-1"
                            style="color: #f35d09;"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                                ></path></svg
                            >
                            <span class="font-bold text-lg font-heading"
                                >{benefits.cards[0].badge?.title}</span
                            >
                        </div>
                        <p class="text-xs text-brand-500">
                            {benefits.cards[0].badge?.subtitle}
                        </p>
                    </div>

                    <h3
                        class="text-3xl sm:text-4xl font-bold font-heading text-brand-900 mb-4 leading-tight"
                    >
                        {benefits.cards[0].title}
                        <span
                            class="text-transparent bg-clip-text"
                            style="background-image: linear-gradient(to right, #f35d09, #f30606);"
                            >{benefits.cards[0].titleHighlight}</span
                        >
                    </h3>
                    <p class="text-brand-600 text-lg max-w-lg leading-relaxed">
                        {benefits.cards[0].description}
                    </p>
                </div>
            </div>

            <!-- Card 2: Presencia Digital -->
            <div
                class="relative group rounded-3xl overflow-hidden shadow-xl animate-fade-in-up animate-delay-300 flex flex-col"
            >
                <!-- Background Image -->
                <div class="absolute inset-0 z-0">
                    <img
                        src="/images/resource-social.webp"
                        alt="Presencia digital para restaurantes"
                        class="w-full h-full object-cover opacity-40 group-hover:scale-105 transition-transform duration-700"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-white via-white/80 to-white/40"
                    >
                    </div>
                </div>
                <div
                    class="p-8 sm:p-10 flex-1 relative z-10 flex flex-col justify-end"
                >
                    <div
                        class="w-14 h-14 rounded-2xl flex items-center justify-center text-2xl mb-6 shadow-lg"
                        style="background: linear-gradient(135deg, #f35d09 0%, #f30606 100%);"
                    >
                        <span class="text-white">üåê</span>
                    </div>
                    <h3
                        class="text-2xl font-bold text-brand-900 font-heading mb-3"
                    >
                        {benefits.cards[1].title}
                        <span
                            class="text-transparent bg-clip-text"
                            style="background-image: linear-gradient(to right, #f35d09, #f30606);"
                            >{benefits.cards[1].titleHighlight}</span
                        >
                    </h3>
                    <p class="text-brand-600 leading-relaxed text-sm">
                        {benefits.cards[1].description}
                    </p>
                </div>
            </div>

            <!-- Card 3: Uniformes + Formaci√≥n -->
            <div
                class="lg:col-span-3 relative group rounded-3xl overflow-hidden shadow-2xl animate-fade-in-up animate-delay-400"
            >
                <!-- Background Image -->
                <div class="absolute inset-0 z-0">
                    <img
                        src="/images/resource-uniforms.webp"
                        alt="Uniformes para restaurantes"
                        class="w-full h-full object-cover opacity-40 group-hover:scale-105 transition-transform duration-1000"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-white via-white/80 to-white/40"
                    >
                    </div>
                </div>

                <div
                    class="relative z-10 p-8 sm:p-12 lg:p-16 flex flex-col md:flex-row items-center gap-10"
                >
                    <div class="flex-1">
                        <div
                            class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full mb-6 shadow-sm"
                            style="background: rgba(243, 93, 9, 0.1); border: 1px solid rgba(243, 93, 9, 0.2);"
                        >
                            <span
                                class="text-lg font-bold"
                                style="color: #2ecc71;">‚úì</span
                            >
                            <span
                                class="text-xs font-bold tracking-wider uppercase text-brand-900"
                                >{benefits.cards[2].badgeLabel}</span
                            >
                        </div>
                        <h3
                            class="text-3xl sm:text-4xl font-bold font-heading text-brand-900 mb-4"
                        >
                            {benefits.cards[2].title}
                            <span
                                class="text-transparent bg-clip-text"
                                style="background-image: linear-gradient(to right, #f35d09, #f30606);"
                                >{benefits.cards[2].titleHighlight}</span
                            >
                        </h3>
                        <p
                            class="text-brand-600 text-lg leading-relaxed max-w-xl"
                        >
                            {benefits.cards[2].description}
                        </p>
                    </div>

                    <div class="w-full md:w-auto grid grid-cols-2 gap-4">
                        <div
                            class="glass-card rounded-2xl p-6 shadow-xl hover:-translate-y-1 transition-transform"
                            style="border-top: 3px solid #f35d09;"
                        >
                            <div class="text-3xl mb-3">
                                {benefits.cards[2].miniCards?.[0].icon}
                            </div>
                            <div
                                class="text-brand-900 font-bold font-heading mb-1 text-sm sm:text-base"
                            >
                                {benefits.cards[2].miniCards?.[0].title}
                            </div>
                            <div class="text-brand-500 text-xs">
                                {benefits.cards[2].miniCards?.[0].subtitle}
                            </div>
                        </div>
                        <div
                            class="glass-card rounded-2xl p-6 shadow-xl hover:-translate-y-1 transition-transform sm:translate-y-6"
                            style="border-top: 3px solid #f30606;"
                        >
                            <div class="text-3xl mb-3">
                                {benefits.cards[2].miniCards?.[1].icon}
                            </div>
                            <div
                                class="text-brand-900 font-bold font-heading mb-1 text-sm sm:text-base"
                            >
                                {benefits.cards[2].miniCards?.[1].title}
                            </div>
                            <div class="text-brand-500 text-xs">
                                {benefits.cards[2].miniCards?.[1].subtitle}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
