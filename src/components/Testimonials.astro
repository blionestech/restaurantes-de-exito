---
import { testimonials } from "../data/content";
---

<section class="section-padding relative overflow-hidden" id="testimonios">
  <!-- Removed dark background -->

  <div class="relative z-10 container-narrow">
    <div class="text-center mb-16">
      <span
        class="inline-block px-4 py-1.5 mb-6 text-sm font-semibold tracking-wider uppercase rounded-full border"
        style="color: #8e44ad; background: rgba(142, 68, 173, 0.05); border-color: rgba(142, 68, 173, 0.2);"
      >
        Testimonios
      </span>
      <h2
        class="text-3xl sm:text-4xl lg:text-5xl font-bold text-brand-900 mb-4"
      >
        {testimonials.title}
      </h2>
      <hr class="section-divider" />
      <p class="text-lg text-brand-600 max-w-2xl mx-auto">
        {testimonials.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-12">
      {
        testimonials.items.map((t, i) => {
          const avatarColors = [
            ["#c2703e", "#a85d32"],
            ["#27ae60", "#1e8449"],
            ["#8e44ad", "#6c3483"],
          ];
          const [from, to] = avatarColors[i % avatarColors.length];
          return (
            <div
              class={`glass-card p-8 flex flex-col animate-fade-in-up animate-delay-${(i + 1) * 100} card-accent-top card-accent-${(i % 6) + 1}`}
            >
              {/* Stars */}
              <div class="flex gap-1 mb-4">
                {Array.from({ length: t.rating }).map(() => (
                  <span class="text-gold-500 text-xl">★</span>
                ))}
              </div>

              {/* Quote */}
              <p class="text-brand-700 leading-relaxed flex-1 mb-6 italic">
                "{t.quote}"
              </p>

              {/* Author */}
              <div class="flex items-center gap-4 pt-4 border-t border-brand-900/5">
                <div
                  class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg overflow-hidden"
                  style={
                    t.image
                      ? ""
                      : `background: linear-gradient(135deg, ${from}, ${to});`
                  }
                >
                  {t.image ? (
                    <img
                      src={t.image}
                      alt={t.name}
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    t.name.charAt(0)
                  )}
                </div>
                <div>
                  <p class="text-brand-900 font-semibold">{t.name}</p>
                  <p class="text-brand-500 text-sm">{t.role}</p>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>

    <div class="text-center animate-fade-in-up animate-delay-400">
      <a href="#cta-final" class="btn-cta text-lg">
        Quiero Unirme al Éxito →
      </a>
    </div>
  </div>
</section>
